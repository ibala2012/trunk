#one more ls aliases
alias ls='ls -hF -G'    # add colors for filetype recognition
alias lx='ls -lXB'        # sort by extension
alias lk='ls -lSr'        # sort by size
alias la='ls -Al'        # show hidden files
alias lr='ls -lR'        # recursice ls
alias lt='ls -ltr'        # sort by date
alias lm='ls -al |more'        # pipe through 'more'
alias tree='tree -Cs'        # nice alternative to 'ls'
alias ll='ls -la'        # long listing
alias l='ls -hF -G'    # quick listing
alias lsize='ls --sort=size -lhr' # list by size
alias lsd='ls -l | grep "^d"'   #list only directories
alias emacs='open -a /Applications/Emacs.app $1'

# bitbucket repos shortcut
alias goenv='cd $BITBUCKET_ROOT/trunk/environment/'
alias goc++='cd $BITBUCKET_ROOT/trunk/c++/'
alias gohaskell='cd $BITBUCKET_ROOT/trunk/haskell/'
alias gopython='cd $BITBUCKET_ROOT/trunk/python/'
alias ec='/Applications/Emacs.app/Contents/MacOS/bin/emacsclient'

#Command substiution
alias ff='sudo find / -name $1'
alias df='df -h -x tmpfs -x usbfs'
alias psg='ps -ef | grep $1'
alias h='history | grep $1'
alias cp='cp -i'
alias mv='mv -i'
alias which='type -all'
alias ..='cd ..'
alias path='echo -e ${PATH//:/\\n}'
alias vi='vim'
alias du='du -h --max-depth=1'



#Timestamps
alias stamp='date "+%Y%m%d%a%H%M"'
alias da='date "+%Y-%m-%d %A    %T %Z"'

# search for a package
alias search="brew search"


#if command not found ##
alias cd..='cd ..'
 
## a quick way to get out of current directory ##
alias ..='cd ..'
alias ...='cd ../../../'
alias ....='cd ../../../../'
alias .....='cd ../../../../'
alias .4='cd ../../../../'
alias .5='cd ../../../../..'
